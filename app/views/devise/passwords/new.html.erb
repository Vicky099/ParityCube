<div class="row">
  <div class="col s10 m5 offset-m4">
    <div class="card horizontal z-depth-2 sign_in_card">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>
        <div class="card-stacked">  
          <div class="card-title border-bottom pad-all-20">Forgot your password?</div>
            <div class="card-content">
              <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, required: true %>
              </div>
            </div>  
            <div class="card-action row">
              <div class="col s12 m5">
                <%= f.submit "Reset password", class: "btn waves-effect waves-light blue" %>
              </div>
              <div class="col s12 m6 text-right">
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</div>
